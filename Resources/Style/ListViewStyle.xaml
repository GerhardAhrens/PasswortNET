<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:localUI="clr-namespace:PasswortNET.Core">

    <!--#region ListView Styles-->
    <Style x:Key="lvwMainStyle" TargetType="{x:Type ListView}">
        <Setter Property="AlternationCount" Value="2" />
        <Setter Property="Background" Value="{StaticResource ResourceKey=Overview.Background}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="IsSynchronizedWithCurrentItem" Value="True" />
        <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
        <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="True" />
        <Setter Property="SelectionMode" Value="Single" />
        <Setter Property="IsSynchronizedWithCurrentItem" Value="True" />
        <Setter Property="VirtualizingPanel.IsContainerVirtualizable" Value="True" />
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
    </Style>

    <Style x:Key="lvwHeaderLeft" TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

    <Style x:Key="lvwHeaderRight" TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="HorizontalContentAlignment" Value="Right" />
    </Style>

    <Style x:Key="lvwColumnMax" TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>

    <Style x:Key="lvwItemContainerStyle" TargetType="{x:Type ListViewItem}">
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="BorderThickness" Value="0,1,0,1" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VirtualizingPanel.IsContainerVirtualizable" Value="True" />
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
        <Setter Property="Margin" Value="2,0,0,0" />
        <Setter Property="Padding" Value="0,2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <localUI:GridViewRowPresenterWithGridLines Margin="{TemplateBinding Padding}" Columns="{TemplateBinding GridView.ColumnCollection}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>

            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
                <Setter Property="FontWeight" Value="Normal" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--#endregion ListView Styles-->

    <DataTemplate x:Key="centralTile">
        <Border
            Name="bd"
            Background="{Binding Path=Background}"
            BorderBrush="{Binding Path=AccessTyp, Converter={StaticResource ResourceKey=AccessTypToFrameColorCoverter}}"
            BorderThickness="4"
            CornerRadius="3">
            <StackPanel
                Width="150"
                Height="150"
                Background="{Binding Path=Background}"
                Orientation="Vertical">

                <StackPanel Height="Auto" Orientation="Horizontal">
                    <TextBlock
                        Height="30"
                        Margin="3,3,0,0"
                        VerticalAlignment="Top"
                        FontSize="18"
                        Text="{Binding Path=Symbol}" />

                    <TextBlock
                        Width="110"
                        Height="Auto"
                        Margin="5,0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="{Binding Path=Title}"
                        TextWrapping="Wrap"
                        ToolTip="{Binding Path=Title}" />
                </StackPanel>

                <TextBlock
                    Margin="5,5"
                    FontSize="11"
                    Text="{Binding Path=Description}"
                    TextWrapping="Wrap"
                    Visibility="{Binding Path=ShowDescription, Converter={StaticResource ResourceKey=BoolToVisibilityCoverter}}" />

                <TextBlock
                    FontSize="11"
                    Foreground="Black"
                    TextWrapping="Wrap">
                    <Run Text="Bereich:" />
                    <Run Text="{Binding Path=Region, Mode=OneWay}" />
                </TextBlock>

                <TextBlock
                    FontSize="9"
                    Foreground="Blue"
                    TextWrapping="Wrap">
                    <Run Text="LE:" />
                    <Run Text="{Binding Path=Timestamp, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </Border>
    </DataTemplate>

    <GridView x:Key="gridView">
        <GridViewColumn
            Width="30"
            Header="*"
            HeaderContainerStyle="{StaticResource ResourceKey=lvwHeaderLeft}">
            <GridViewColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Symbol}" />
                </DataTemplate>
            </GridViewColumn.CellTemplate>
        </GridViewColumn>

        <GridViewColumn
            Width="300"
            DisplayMemberBinding="{Binding Path=Title}"
            Header="Titel"
            HeaderContainerStyle="{StaticResource ResourceKey=lvwHeaderLeft}" />

        <GridViewColumn
            Width="500"
            Header="Beschreibung"
            HeaderContainerStyle="{StaticResource ResourceKey=lvwHeaderLeft}">
            <GridViewColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Description}" TextWrapping="Wrap" />
                </DataTemplate>
            </GridViewColumn.CellTemplate>
        </GridViewColumn>
    </GridView>

    <localUI:PlainView x:Key="tileView" ItemTemplate="{StaticResource ResourceKey=centralTile}" />

    <Style
        x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type localUI:PlainView},
                                     ResourceId=myPlainViewDSK}"
        BasedOn="{StaticResource {x:Type ListBox}}"
        TargetType="{x:Type ListView}">
        <Setter Property="ItemContainerStyle" Value="{Binding (ListView.View).ItemContainerStyle, RelativeSource={RelativeSource Self}}" />
        <Setter Property="ItemTemplate" Value="{Binding (ListView.View).ItemTemplate, RelativeSource={RelativeSource Self}}" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>