<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:localConverter="clr-namespace:PasswortNET.Views.Converter"
    xmlns:localUI="clr-namespace:PasswortNET.Core">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <localConverter:IntToSymbolCoverter x:Key="IntToSymbolCoverter" />
            <localConverter:AccessTypToFrameColorCoverter x:Key="AccessTypToFrameColorCoverter" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityCoverter" />
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="centralTile">
        <Border
            Name="bd"
            Background="{Binding Path=Background}"
            BorderBrush="{Binding Path=AccessTyp, Converter={StaticResource ResourceKey=AccessTypToFrameColorCoverter}}"
            BorderThickness="4"
            CornerRadius="3">
            <StackPanel
                Width="150"
                Height="150"
                Background="{Binding Path=Background}"
                Orientation="Vertical">

                <StackPanel Height="Auto" Orientation="Horizontal">
                    <ModernUI:GeometryLabel
                        Height="30"
                        Margin="3,3,0,0"
                        VerticalAlignment="Top"
                        FontSize="18"
                        PathData="{Binding Path=Symbol, Converter={StaticResource ResourceKey=IntToSymbolCoverter}, FallbackValue=xxx}" />

                    <TextBlock
                        Width="110"
                        Height="Auto"
                        Margin="5,0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="{Binding Path=Title}"
                        TextWrapping="Wrap"
                        ToolTip="{Binding Path=Title}" />
                </StackPanel>

                <TextBlock
                    Margin="5,5"
                    FontSize="11"
                    Text="{Binding Path=Description}"
                    TextWrapping="Wrap"
                    Visibility="{Binding Path=ShowDescription, Converter={StaticResource ResourceKey=BoolToVisibilityCoverter}}" />

                <TextBlock
                    FontSize="11"
                    Foreground="Black"
                    TextWrapping="Wrap">
                    <Run Text="Bereich:" />
                    <Run Text="{Binding Path=Region, Mode=OneWay}" />
                </TextBlock>

                <TextBlock
                    FontSize="9"
                    Foreground="Blue"
                    TextWrapping="Wrap">
                    <Run Text="LE:" />
                    <Run Text="{Binding Path=Timestamp, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </Border>
    </DataTemplate>

    <GridView x:Key="gridView">
        <GridViewColumn
            Width="30"
            Header="*"
            HeaderContainerStyle="{StaticResource ResourceKey=lvwHeaderLeft}">
            <GridViewColumn.CellTemplate>
                <DataTemplate>
                    <ModernUI:GeometryLabel
                        Height="30"
                        Margin="3,3,0,0"
                        VerticalAlignment="Top"
                        FontSize="18"
                        PathData="{Binding Path=Symbol, Converter={StaticResource ResourceKey=IntToSymbolCoverter}, FallbackValue=xxx}" />
                </DataTemplate>
            </GridViewColumn.CellTemplate>
        </GridViewColumn>

        <GridViewColumn
            Width="300"
            DisplayMemberBinding="{Binding Path=Title}"
            Header="Titel"
            HeaderContainerStyle="{StaticResource ResourceKey=lvwHeaderLeft}" />

        <GridViewColumn
            Width="500"
            Header="Beschreibung"
            HeaderContainerStyle="{StaticResource ResourceKey=lvwHeaderLeft}">
            <GridViewColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Description}" TextWrapping="Wrap" />
                </DataTemplate>
            </GridViewColumn.CellTemplate>
        </GridViewColumn>
    </GridView>

    <localUI:PlainView x:Key="tileView" ItemTemplate="{StaticResource ResourceKey=centralTile}" />

    <Style
        x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type localUI:PlainView},
                                     ResourceId=myPlainViewDSK}"
        BasedOn="{StaticResource {x:Type ListBox}}"
        TargetType="{x:Type ListView}">
        <Setter Property="ItemContainerStyle" Value="{Binding (ListView.View).ItemContainerStyle, RelativeSource={RelativeSource Self}}" />
        <Setter Property="ItemTemplate" Value="{Binding (ListView.View).ItemTemplate, RelativeSource={RelativeSource Self}}" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
