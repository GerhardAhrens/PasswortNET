<UserControl
    x:Class="PasswortNET.Views.TabAppSettings.TabAppSettingsAllgemein"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswortNET.Views.TabAbout"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ModernUI:SimpleGrid
        Margin="5"
        Columns="120,300,160,*"
        Rows="Auto,Auto,Auto, 30, 30">
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="Programm beenden und Position" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Soll beim beenden ein Abfragedialog angezeigt werden?"
            TextWrapping="Wrap" />

        <ModernUI:FlatCheckBox
            Grid.Row="1"
            Grid.Column="1"
            IsChecked="{Binding Path=ExitQuestion, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Letzte Position beim beenden speichern?"
            TextWrapping="Wrap" />

        <ModernUI:FlatCheckBox
            Grid.Row="2"
            Grid.Column="1"
            IsChecked="{Binding Path=ApplicationPosition, UpdateSourceTrigger=PropertyChanged}" />
    </ModernUI:SimpleGrid>
</UserControl>
