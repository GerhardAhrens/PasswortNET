<base:UserControlBase
    x:Class="PasswortNET.Views.ContentControls.DataSyncUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:ModernWPF="clr-namespace:ModernIU.WPF.Base;assembly=ModernUILibrary"
    xmlns:base="clr-namespace:ModernUI.MVVM.Base;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswortNET.Views.ContentControls"
    xmlns:localStatic="clr-namespace:PasswortNET.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ModernWPF:CommandKeyReference x:Key="LogoffCmdKey" Command="{Binding Path=CmdAgg[LogoffCommand]}" />
        <ModernWPF:CommandKeyReference x:Key="BackCloseCmdKey" Command="{Binding Path=CmdAgg[BackAboutCommand]}" />

    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding
            Key="L"
            Command="{StaticResource ResourceKey=LogoffCmdKey}"
            Modifiers="Ctrl" />
    </UserControl.InputBindings>

    <ModernUI:SimpleGrid Columns="*" Rows="30,*,*">
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Height="Auto"
            Background="LightBlue"
            Orientation="Horizontal">

            <ModernUI:PathButton
                Width="100"
                Height="25"
                Background="SteelBlue"
                Command="{StaticResource ResourceKey=BackCloseCmdKey}"
                CommandParameter="{x:Static localStatic:MainButton.Back}"
                Content="Zurück"
                CornerRadius="2"
                MouseOverBackground="LightGray"
                PathData="{StaticResource ResourceKey=ArrowLeft}"
                PathWidth="18"
                PressedBackground="Gray" />

            <TextBlock
                x:Name="TbTitelUC"
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="TbTitelUC" />
        </StackPanel>

        <ModernUI:MGroupBox
            Grid.Row="1"
            Grid.Column="0"
            Header="Datenbank synchronisieren Export">
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="Medium" Text="Mit dem Export der Datenbank mit einer weiteren PasswortNET Datenbank synchronisieren" />
                <ModernUI:ContentElements
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    KeyboardNavigation.DirectionalNavigation="Contained">
                    <ModernUI:ContentFrame
                        Title="Passwortdatenbank als Datei exportieren"
                        HorizontalAlignment="Left"
                        TitleWidth="150">
                        <TextBlock Text="" />
                    </ModernUI:ContentFrame>

                    <ModernUI:ContentFrame
                        Title="Export wie gewählt starten"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        TitleWidth="150">
                        <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                            <ModernUI:PathButton
                                Width="150"
                                Height="30"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding Path=CmdAgg[ExportCommand]}"
                                Content="Export erstellen"
                                PathData="{StaticResource ResourceKey=IconExportX}"
                                PathWidth="24" />

                            <Grid>
                                <ModernUI:FlatProgressBar
                                    Width="500"
                                    Height="20"
                                    Margin="10,5,0,0"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    Foreground="#2B85E9"
                                    Maximum="100"
                                    Minimum="0"
                                    Skin="Rectangle"
                                    Value="{Binding Path=ProgressBarValue, Mode=OneWay}" />

                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Medium"
                                    Text="{Binding Path=ProgressBarText, StringFormat={}{0:0}, FallbackValue=0%}" />
                            </Grid>
                        </StackPanel>
                    </ModernUI:ContentFrame>

                </ModernUI:ContentElements>
            </StackPanel>
        </ModernUI:MGroupBox>

        <ModernUI:MGroupBox
            Grid.Row="2"
            Grid.Column="0"
            Header="Datenbank synchronisieren Import">
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="Medium" Text="Mit dem Import der Dateien aus einer anderen PasswortNET Datenbank, kann diese Version synchronisiert werden." />
            </StackPanel>
        </ModernUI:MGroupBox>
    </ModernUI:SimpleGrid>
</base:UserControlBase>
