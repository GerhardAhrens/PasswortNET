<base:UserControlBase
    x:Class="PasswortNET.Views.ContentControls.AboutUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:base="clr-namespace:ModernUI.MVVM.Base;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswortNET.Views.ContentControls"
    xmlns:localControls="clr-namespace:PasswortNET.Views.TabAbout"
    xmlns:localStatic="clr-namespace:PasswortNET.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ModernUI:SimpleGrid Columns="*" Rows="Auto,*,30">
        <StackPanel
            Height="Auto"
            Background="LightBlue"
            Orientation="Horizontal">
            <ModernUI:PathButton
                Width="100"
                Height="25"
                Background="SteelBlue"
                Command="{Binding Path=CmdAgg[BackAboutCommand]}"
                CommandParameter="{x:Static localStatic:MainButton.Back}"
                Content="Zurück"
                CornerRadius="2"
                MouseOverBackground="LightGray"
                PathData="{StaticResource ResourceKey=ArrowLeft}"
                PathWidth="18"
                PressedBackground="Gray" />

            <TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="{Binding Path=Titel, UpdateSourceTrigger=PropertyChanged, FallbackValue=TitelUC}" />
        </StackPanel>

        <ModernUI:LeftTabControl
            Grid.Row="1"
            Grid.Column="0"
            Focusable="True"
            TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentPresenter Content="{TemplateBinding Content}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Padding" Value="3" />
                </Style>
            </TabControl.Resources>

            <TabItem Width="100">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
                            <Run Text="Allgemein" />
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <localControls:TabAboutAllgemein />
            </TabItem>

            <TabItem Width="100">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
                            <Run Text="Statistik" />
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <localControls:TabAboutStatistik />
            </TabItem>
        </ModernUI:LeftTabControl>

    </ModernUI:SimpleGrid>
</base:UserControlBase>
