<base:UserControlBase
    x:Class="PasswortNET.Views.ContentControls.AppSettingsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:base="clr-namespace:ModernUI.MVVM.Base;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswortNET.Views.ContentControls"
    xmlns:localStatic="clr-namespace:PasswortNET.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ModernUI:SimpleGrid Columns="*" Rows="Auto,*,30">
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Height="Auto"
            Background="LightBlue"
            Orientation="Horizontal">
            <ModernUI:PathButton
                Width="100"
                Height="25"
                Background="SteelBlue"
                Command="{Binding Path=CmdAgg[BackSettingsCommand]}"
                CommandParameter="{x:Static localStatic:MainButton.Back}"
                Content="Zurück"
                CornerRadius="2"
                MouseOverBackground="LightGray"
                PathData="{StaticResource ResourceKey=ArrowLeft}"
                PathWidth="18"
                PressedBackground="Gray" />

            <TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="{Binding Path=Titel, UpdateSourceTrigger=PropertyChanged, FallbackValue=TitelUC}" />
        </StackPanel>

        <ModernUI:MTabControl
            x:Name="tcSettings"
            Grid.Row="1"
            Grid.Column="0"
            Focusable="True"
            FrameworkElement.Loaded="TabControl_Loaded"
            Grid.IsSharedSizeScope="True"
            SelectionChanged="tcSettings_SelectionChanged"
            TabStripPlacement="Top"
            Type="Card">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentPresenter Content="{TemplateBinding Content}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Padding" Value="3" />
                </Style>
            </TabControl.Resources>

            <TabItem Header="Allgemein">
                <Border>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="TabItem1" />
                </Border>
            </TabItem>

            <TabItem Header="Datenbank">
                <Border>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="TabItem2" />
                </Border>
            </TabItem>

            <TabItem Header="Tag">
                <Border>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="TabItem2" />
                </Border>
            </TabItem>
        </ModernUI:MTabControl>

    </ModernUI:SimpleGrid>
</base:UserControlBase>
