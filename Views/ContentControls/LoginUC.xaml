<base:UserControlBase
    x:Class="PasswortNET.Views.ContentControls.LoginUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:base="clr-namespace:ModernUI.MVVM.Base;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswortNET.Views.ContentControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ModernUI:SimpleGrid Columns="*" Rows="30,*,30">
        <StackPanel
            Height="Auto"
            Background="LightBlue"
            Orientation="Horizontal">

            <TextBlock
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="An PasswortNET anmelden" />
        </StackPanel>

        <DockPanel
            Grid.Row="2"
            Grid.Column="0"
            Height="Auto"
            Background="LightBlue">

            <ModernUI:FlatButton
                Width="100"
                Margin="10,0,0,0"
                Command="{Binding Path=CmdAgg[LoginCommand]}"
                Content="Anmelden"
                DockPanel.Dock="Right" />

            <ModernUI:FlatButton
                Width="100"
                HorizontalAlignment="Right"
                Command="{Binding Path=CmdAgg[LoginCommand]}"
                Content="Beeenden" />
        </DockPanel>

    </ModernUI:SimpleGrid>
</base:UserControlBase>
