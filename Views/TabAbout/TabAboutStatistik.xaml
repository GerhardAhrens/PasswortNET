<UserControl
    x:Class="PasswortNET.Views.TabAbout.TabAboutStatistik"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswortNET.Views.TabAbout"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ModernUI:SimpleGrid
        Margin="5"
        Columns="120,300,160,*"
        Rows="Auto,Auto,Auto, Auto, Auto,Auto, Auto">
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="Informationen zu den Einträgen der Datenbank PasswortNET" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Anzahl der Einträge aller Typen"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=CountAll, UpdateSourceTrigger=PropertyChanged, FallbackValue=0}"
            TextAlignment="Right" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Anzahl der Einträge für Webzugänge"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=CountWebsite, UpdateSourceTrigger=PropertyChanged, FallbackValue=0}"
            TextAlignment="Right" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Anzahl der Einträge für Passwörter"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=CountPasswort, UpdateSourceTrigger=PropertyChanged, FallbackValue=0}"
            TextAlignment="Right" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Anzahl der Einträge für Pin's"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=CountPin, UpdateSourceTrigger=PropertyChanged, FallbackValue=0}"
            TextAlignment="Right" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Anzahl der Einträge für Lizenzen"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=CountLicense, UpdateSourceTrigger=PropertyChanged, FallbackValue=0}"
            TextAlignment="Right" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Letzter Zugriff"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Width="120"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=LastAccess, UpdateSourceTrigger=PropertyChanged, FallbackValue=dd.MM.yyyy}"
            TextAlignment="Right" />
    </ModernUI:SimpleGrid>
</UserControl>
