<UserControl
    x:Class="PasswortNET.Views.TabAbout.TabAboutAllgemein"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswortNET.Views.TabAbout"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ModernUI:SimpleGrid
        Margin="5"
        Columns="120,300,160,*"
        Rows="Auto,Auto,Auto, Auto, Auto, Auto, Auto,Auto">
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5,0,0,10"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="Informationen zum Programm PasswortNET" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,0,0,5"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Produkt"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=Product, UpdateSourceTrigger=PropertyChanged, FallbackValue=N/A}" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0,0,5"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Version"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=ProductVersion, UpdateSourceTrigger=PropertyChanged, FallbackValue=0.0.0.0}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="5,0,0,5"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Beschreibung"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged, FallbackValue=N/A}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5,0,0,5"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Copyright/Autor"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=Copyright, UpdateSourceTrigger=PropertyChanged, FallbackValue=N/A}" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5,0,0,5"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Git Repository"
            TextWrapping="Wrap" />

        <ModernUI:LinkTextBlock
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            LinkText="{Binding Path=GitRepository, UpdateSourceTrigger=PropertyChanged}"
            Text="{Binding Path=GitRepository, UpdateSourceTrigger=PropertyChanged, FallbackValue=N/A}" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="5,0,0,5"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Frameworkversion"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=FrameworkVersion, UpdateSourceTrigger=PropertyChanged, FallbackValue=N/A}" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Margin="5,0,0,0"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Betriebssystem"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Medium"
            Foreground="Blue"
            Text="{Binding Path=OSEnvironment, UpdateSourceTrigger=PropertyChanged, FallbackValue=N/A}" />
    </ModernUI:SimpleGrid>
</UserControl>
